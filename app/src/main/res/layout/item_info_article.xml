<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="18dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/item_tour_search_background_rectangle"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.025"
        android:paddingHorizontal="12dp"
        android:paddingVertical="7dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        tools:text="Лучшие туры в Германию. Весна 2022." />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_info_slider_arrow_left"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/item_tour_search_background_rectangle"
        android:contentDescription="@string/common_empty_description"
        android:padding="8dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="@+id/slider"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/slider_double_arrow_right" />

    <ImageView
        android:id="@+id/item_info_slider_arrow_right"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/item_tour_search_background_rectangle"
        android:contentDescription="@string/common_empty_description"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/slider_double_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>