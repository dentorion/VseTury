<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/article_background_gradient"
    android:scrollbars="none"
    tools:context=".screens.main.MainScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/black"
        android:paddingHorizontal="25dp"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/logo"
            style="@style/Theme.VseTury.Logo"
            android:contentDescription="@string/content_description_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_header_label"
            style="@style/Theme.VseTury.LabelBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/main_label_plan_trip"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <Spinner
            android:id="@+id/main_spinner_city_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/main_search_city_spinner_background"
            android:backgroundTint="@color/real_white"
            app:layout_constraintEnd_toStartOf="@+id/main_date_from"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_header_label" />

        <Spinner
            android:id="@+id/main_spinner_city_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/main_search_city_spinner_background"
            android:backgroundTint="@color/real_white"
            app:layout_constraintEnd_toStartOf="@+id/main_date_to"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_spinner_city_from" />

        <ImageView
            android:id="@+id/main_spinner_from_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/common_empty_description"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/main_spinner_city_to"
            app:layout_constraintEnd_toEndOf="@+id/main_spinner_city_to"
            app:layout_constraintTop_toTopOf="@+id/main_spinner_city_to" />

        <ImageView
            android:id="@+id/main_spinner_to_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/common_empty_description"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/main_spinner_city_from"
            app:layout_constraintEnd_toEndOf="@+id/main_spinner_city_from"
            app:layout_constraintTop_toTopOf="@+id/main_spinner_city_from" />

        <TextView
            android:id="@+id/label_plan_trip"
            style="@style/Theme.VseTury.LabelBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_label_show_date"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/list_header_label"
            app:layout_constraintEnd_toEndOf="@+id/main_date_from"
            app:layout_constraintStart_toStartOf="@+id/main_date_from"
            app:layout_constraintTop_toTopOf="@+id/list_header_label" />

        <TextView
            android:id="@+id/main_date_from"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:background="@drawable/main_search_city_spinner_background"
            android:backgroundTint="@color/real_white"
            android:fontFamily="@font/roboto_condensed_bold_italic"
            android:gravity="center"
            android:letterSpacing="0.07"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/sunset"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/main_spinner_city_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_spinner_city_from"
            tools:text="12 апреля" />

        <TextView
            android:id="@+id/main_date_to"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:background="@drawable/main_search_city_spinner_background"
            android:backgroundTint="@color/real_white"
            android:fontFamily="@font/roboto_condensed_bold_italic"
            android:gravity="center"
            android:letterSpacing="0.07"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/sunset"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/main_spinner_city_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_spinner_city_to"
            tools:text="22 апреля" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_search_btn"
            style="@style/Theme.VseTury.SearchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/content_description_search_btn"
            android:text="@string/main_search_btn_text"
            app:layout_constraintEnd_toEndOf="@+id/main_date_to"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/main_spinner_city_to"
            app:layout_constraintTop_toBottomOf="@+id/main_spinner_city_to" />

        <ImageButton
            android:id="@+id/main_circle_btn_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_heart_selector"
            android:contentDescription="@string/common_empty_description"
            app:layout_constraintBottom_toBottomOf="@+id/main_circle_btn_star"
            app:layout_constraintEnd_toStartOf="@+id/main_circle_btn_bell"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_circle_btn_star"
            app:layout_constraintTop_toTopOf="@+id/main_circle_btn_star" />

        <ImageButton
            android:id="@+id/main_circle_btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/circle_button_star_selector"
            android:contentDescription="@string/common_empty_description"
            app:layout_constraintEnd_toStartOf="@+id/main_circle_btn_heart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_search_btn" />

        <ImageButton
            android:id="@+id/main_circle_btn_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="@drawable/circle_button_bell_selector"
            android:contentDescription="@string/common_empty_description"
            app:layout_constraintBottom_toBottomOf="@+id/main_circle_btn_heart"
            app:layout_constraintEnd_toStartOf="@+id/main_circle_btn_corona"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_circle_btn_heart"
            app:layout_constraintTop_toTopOf="@+id/main_circle_btn_heart"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/main_circle_btn_corona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_button_corona_selector"
            android:contentDescription="@string/common_empty_description"
            app:layout_constraintBottom_toBottomOf="@+id/main_circle_btn_bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_circle_btn_bell"
            app:layout_constraintTop_toTopOf="@+id/main_circle_btn_bell" />

        <LinearLayout
            android:id="@+id/main_linear_dots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_circle_btn_star">

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_linear_dots" />

        <include layout="@layout/part_result" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>